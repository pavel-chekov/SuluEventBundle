<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity repository-class="Chekov\Bundle\EventBundle\Repository\PlanItemRepository"
            name="Chekov\Bundle\EventBundle\Entity\PlanItem"
            table="ev_plan_item">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="name" type="string" column="name" length="255"/>
        <field name="x" type="float" column="x"/>
        <field name="y" type="float" column="y"/>
        <field name="type" type="string" column="type" length="255"/>

        <one-to-many target-entity="Chekov\Bundle\EventBundle\Entity\EventDateReserveration" mapped-by="planItem" field="eventDateReservations"/>

        <many-to-one target-entity="Chekov\Bundle\EventBundle\Entity\Plan" field="plan" inversed-by="items">
            <join-column column-definition="plan_id" on-delete="CASCADE" nullable="false"/>
        </many-to-one>
    </entity>
</doctrine-mapping>
